<html>

<h1>Friendships and Rivalries</h1>
<p>
	<button type="button" id='toggle1' onclick="friendshipFunc()">Add a Friendship between Characters</button>
</p>
	<form action = "/character_relationships/addFriendship" method="post" id="addFriendship">
		<fieldset>
			<legend>Character Friendships</legend>
				<div>
					<p><span style="color:red">Note: To avoid using the same character and duplication, Character 1 id must be less than Character 2 id.<br>
					     An error msg will occur if you submit and this condition is not met.</span><br>
					     <span style="color:blue">This database DOES allow heroes and villains to be friends.</span></p>
					<p>Select Character 1
					<select name="friend1_id">
                    {{#each characters}}
						<option value="{{character_id}}">{{character_name}}</option>
                    {{/each}}
                </select><br>
					</p>
				</div>
				<div>
					<p>Select Character 2
					<select name="friend2_id">
                    {{#each characters}}
						<option value="{{character_id}}">{{character_name}}</option>
                    {{/each}}
					</select><br>
					</p>
				</div>
				<div>
					<input type="submit" value="Submit">
				</div>
		</fieldset>
	</form>
	<h3>Here are the current contents of Friend Relationship</h3>
		<table>
			<thead>
				<th>id</th>
				<th>Friend 1</th>
				<th>Friend 2</th>
				<th>Delete a Row </th>
			</thead>
			<tbody>
				{{# each friendships}}
				<tr>
					<td>{{id}}</td>
					<td>{{friend1_id}}</td>
					<td>{{friend2_id}}</td>
					<td><button>DELETE</button></td>
				</tr>
				{{/each}}
			</tbody>
		</table>

	<p>
		<button type="button" id='toggle2' onclick="rivalFunc()">Add a Rivalry between Characters</button>
	</p>
	<form action = "/character_relationships/addRivalry" method="post" id="addRivalry">
		<fieldset>
			<legend>Rivalry</legend>
				<div>
					<p><span style="color:red">Note: To avoid using the same character and duplication, Character 1 id must be less than Character 2 id.<br>
					     An error msg will occur if you submit and this condition is not met.</span><br>
					     <span style="color:blue">This database DOES allow heroes to be rivals with other heroes and the same with villains.</span></p>
					<p>Select Character 1
					<select name="rival1_id">
                    {{#each characters}}
						<option value="{{character_id}}">{{character_name}}</option>
                    {{/each}}
					</select><br>
					</p>
				</div>
				<div>
					<p>Select Character 2
						<select name="rival2_id">
						{{#each characters}}
							<option value="{{character_id}}">{{character_name}}</option>
						{{/each}}
						</select><br>
					</p>
				</div>
				<div>
					<input type="submit" value="Submit">
				</div>
		</fieldset>
	</form>
	<h3>Here are the current contents of Rival Relationship</h3>
	<table>
		<thead>
			<th>id</th>
			<th>Rival 1</th>
			<th>Rival 2</th>
			<th>Delete a Row</th>
		</thead>
		<tbody>
			{{#each rivalries}}
			<tr>
				<td>{{id}}</td>
				<td>{{rival1_id}}</td>
				<td>{{rival2_id}}</td>
				<td><button>DELETE</button></td>
			</tr>
				{{/each}}
			</tbody>
		</table>

</html>
